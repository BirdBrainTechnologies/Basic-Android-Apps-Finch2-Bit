<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sensorValues"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/outputControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/lightButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#189bab"
            android:onClick="lightButtonClicked"
            android:src="@drawable/ic_lightbulb_outline_black_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/musicButton" />


        <ImageButton
            android:id="@+id/musicButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#189bab"
            android:onClick="musicButtonClicked"
            android:src="@drawable/ic_music_note_black_24dp"
            app:layout_constraintTop_toBottomOf="@id/lightButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/distanceLabel" />

        <TextView
            android:id="@+id/distanceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance (Port 1)"
            android:textSize="25dp"
            app:layout_constraintBottom_toTopOf="@+id/lightLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/musicButton" />

        <TextView
            android:id="@+id/distanceNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 cm"
            android:textSize="25dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintTop_toTopOf="@+id/distanceLabel"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteX="444dp" />

        <TextView
            android:id="@+id/lightLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light (Port 2)"
            android:textSize="25dp"
            app:layout_constraintBottom_toTopOf="@+id/lineLabel"
            app:layout_constraintStart_toStartOf="@+id/distanceLabel"
            app:layout_constraintTop_toBottomOf="@+id/distanceLabel" />

        <TextView
            android:id="@+id/lightNumbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(0, 0)"
            android:textSize="25dp"
            app:layout_constraintStart_toEndOf="@+id/lightLabel"
            app:layout_constraintStart_toStartOf="@+id/distanceNumber"
            app:layout_constraintTop_toTopOf="@+id/lightLabel" />

        <TextView
            android:id="@+id/lineLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dial (Port 3)"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/lightLabel"
            app:layout_constraintTop_toBottomOf="@+id/lightLabel" />

        <TextView
            android:id="@+id/lineNumbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(0, 0)"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="@+id/lightNumbers"
            app:layout_constraintTop_toTopOf="@+id/lineLabel" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/outputControls"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sensorValues"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/servo1Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servo 1"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/seekBarServo1"
            app:layout_constraintBottom_toTopOf="@+id/servo2Label" />

        <SeekBar
            android:id="@+id/seekBarServo1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/servo1Label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/servo1Label"
            app:layout_constraintBottom_toBottomOf="@+id/servo1Label" />

        <TextView
            android:id="@+id/servo2Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servo 2"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/servo1Label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/seekBarServo2"
            app:layout_constraintBottom_toTopOf="@+id/servo3Label" />

        <SeekBar
            android:id="@+id/seekBarServo2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/servo2Label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/servo2Label"
            app:layout_constraintBottom_toBottomOf="@+id/servo2Label" />

        <TextView
            android:id="@+id/servo3Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servo 3"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/servo2Label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/seekBarServo3"
            app:layout_constraintBottom_toTopOf="@+id/servo4Label" />

        <SeekBar
            android:id="@+id/seekBarServo3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/servo3Label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/servo3Label"
            app:layout_constraintBottom_toBottomOf="@+id/servo3Label" />

        <TextView
            android:id="@+id/servo4Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servo 4"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/servo3Label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/seekBarServo4"
            app:layout_constraintBottom_toTopOf="@+id/seekBarColor" />

        <SeekBar
            android:id="@+id/seekBarServo4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/servo4Label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/servo4Label"
            app:layout_constraintBottom_toBottomOf="@+id/servo4Label" />

        <SeekBar
            android:id="@+id/seekBarColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/colorbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/servo4Label" />

        <ImageView
            android:id="@+id/colorbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seekBarColor"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/colorbar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>